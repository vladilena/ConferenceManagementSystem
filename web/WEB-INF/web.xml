<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <servlet>
        <servlet-name>Controller</servlet-name>
        <servlet-class>com.training.vladilena.controller.servlet.MainServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Controller</servlet-name>
        <url-pattern>/conf/*</url-pattern>
    </servlet-mapping>

    <welcome-file-list>
        <welcome-file>/WEB-INF/view/main.jsp</welcome-file>
    </welcome-file-list>

    <error-page>
        <error-code>404</error-code>
        <location>/WEB-INF/view/error/error404.jsp</location>
    </error-page>
    <error-page>
        <error-code>500</error-code>
        <location>/WEB-INF/view/error/error500.jsp</location>
    </error-page>
    <error-page>
        <exception-type>com.training.vladilena.model.exceptions.PermissionErrorException</exception-type>
        <location>/WEB-INF/view/error/permission.jsp</location>
    </error-page>

    <context-param>
        <param-name>javax.servlet.jsp.jstl.fmt.fallbackLocale</param-name>
        <param-value>uk-UA</param-value>
    </context-param>

    <absolute-ordering>
        <name>EncodingFilter</name>
        <name>AccessFilter</name>
    </absolute-ordering>
    <filter>
        <filter-name>EncodingFilter</filter-name>
        <filter-class>com.training.vladilena.controller.filters.EncodingFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>EncodingFilter</filter-name>
        <servlet-name>Controller</servlet-name>
        <url-pattern>/*</url-pattern>
        <dispatcher>REQUEST</dispatcher>
        <dispatcher>FORWARD</dispatcher>
    </filter-mapping>

    <filter>
        <filter-name>AccessFilter</filter-name>
        <filter-class>com.training.vladilena.controller.filters.AccessFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>AccessFilter</filter-name>
        <servlet-name>Controller</servlet-name>
        <url-pattern>/*</url-pattern>
        <dispatcher>REQUEST</dispatcher>
        <dispatcher>FORWARD</dispatcher>
    </filter-mapping>

    <listener>
        <listener-class>com.training.vladilena.controller.listeners.SessionListener</listener-class>
    </listener>

    <listener>
        <listener-class>com.training.vladilena.controller.listeners.LocaleListener</listener-class>
    </listener>

    <listener>
        <listener-class>com.training.vladilena.controller.listeners.UpcomingEventListener</listener-class>
    </listener>

    <listener>
        <listener-class>com.training.vladilena.controller.listeners.BonusesListener</listener-class>
    </listener>

    <context-param>
        <param-name>javax.servlet.jsp.jstl.fmt.localizationContext</param-name>
        <param-value>text</param-value>
    </context-param>

    <session-config>
        <tracking-mode>COOKIE</tracking-mode>
    </session-config>

    <!-- tld -->
    <jsp-config>
        <taglib>
            <taglib-uri>time_convertor.tld</taglib-uri>
            <taglib-location>/WEB-INF/time_convertor.tld</taglib-location>
        </taglib>
    </jsp-config>

</web-app>